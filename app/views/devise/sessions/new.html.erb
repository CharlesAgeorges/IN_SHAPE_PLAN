<div class="user_profile_banner">
  <%= image_tag "banner_log_in.jpg", class: "user_profile_banner_img", alt: "Banner" %>

  <div class="user_profile_banner_overlay"></div>

  <div class="user_profile_banner_content">
    <h1>Connexion</h1>
    <p>Connecte-toi pour accéder à ton espace.</p>
  </div>
</div>

<div class="user-profile">
  <div class="user-profile_card">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="user-profile_group">
        <%= f.label :email, "Email", class: "user-profile_label" %>
        <%= f.email_field :email, class: "user-profile_input" %>
      </div>

      <div class="user-profile_group">
        <%= f.label :password, "Mot de passe", class: "user-profile_label" %>
        <%= f.password_field :password, class: "user-profile_input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="user-profile_group">
          <%= f.check_box :remember_me, class: "user-profile_checkbox" %>
          <%= f.label :remember_me, "Se souvenir de moi", class: "user-profile_label_checkbox" %>
        </div>
      <% end %>

      <div class="user-profile_actions">
        <%= f.submit "Se connecter", class: "user-profile_submit" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
