<div class="user_profile_banner">
  <%= image_tag "banner_sign_in.jpg", class: "user_profile_banner_img", alt: "Banner" %>

  <div class="user_profile_banner_overlay"></div>

  <div class="user_profile_banner_content">
    <h1>Inscription</h1>
    <p>Créer ton compte pour rejoindre la communauté.</p>
  </div>
</div>

<div class="user-profile">
  <div class="user-profile_card">


    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= f.error_notification %>

      <div class="user-profile_group">
        <%= f.label :email, "Email", class: "user-profile_label" %>
        <%= f.email_field :email,
              class: "user-profile_input",
              autofocus: true,
              autocomplete: "email" %>
      </div>

      <div class="user-profile_group">
        <%= f.label :password, "Mot de passe", class: "user-profile_label" %>
        <%= f.password_field :password,
              class: "user-profile_input",
              autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <p class="user-profile_hint"><%= @minimum_password_length %> caractères minimum</p>
        <% end %>
      </div>

      <div class="user-profile_group">
        <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "user-profile_label" %>
        <%= f.password_field :password_confirmation,
              class: "user-profile_input",
              autocomplete: "new-password" %>
      </div>

      <div class="user-profile_group">
        <%= f.input :photo, as: :file %>
      </div>

      <div class="user-profile_actions">
        <%= f.submit "S'inscrire", class: "btn btn-success btn-lg return-training-btn" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
