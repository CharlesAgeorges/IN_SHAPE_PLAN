<% if message.role == "user" %>
  <div class="d-flex justify-content-end mb-2">
    <div class="bg-light-blue px-3 pb-0 pt-3 rounded-pill">
      <%= raw(render_markdown(message.content)) %>
    </div>
  </div>
<% elsif message.role == "assistant" %>
  <div class="d-flex justify-content-start mb-5" id="<%= dom_id(message) %>">
    <div class="px-3 rounded-5 pb-0 pt-3 bg-mid-gray">
      <%= message.content.present? ? raw(render_markdown(message.content)) : "..."  %>
    </div>
  </div>
<% end %>
